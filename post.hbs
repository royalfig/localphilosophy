{{! Put this into default.hbs }}
{{!< default}}

{{#post}}

  {{#contentFor 'bg'}}
    <img src='{{img_url feature_image size='xl'}}' />
  {{/contentFor}}

  <header class='grid lp-post__header'>
    <h1>{{title}}</h1>

    <div class='lp-post__author'>
      {{#foreach authors}}
        <div class='lp-author'>
          <img src='{{img_url profile_image size='s'}}' alt='{{name}}' />
          <p>{{name}}</p>
        </div>
      {{/foreach}}
    </div>

    <div class='lp-post__meta'>
      <div class='lp-post__primary-tag'>
        <p><a href='{{primary_tag.url}}'>{{primary_tag.name}}</a></p>
      </div>
      <div class='lp-post__pub-date'>
        <p>{{date}}</p>
      </div>
      <div class='lp-post__share-btn'>
        <button>Share</button>
      </div>
    </div>

    <div class='lp-post__excerpt'><p>{{excerpt}}</p></div>
  </header>

  <div class='lp-post__map'>

  </div>

  <article class='{{post_class}} lp-post__content'>
    {{content}}
  </article>

{{/post}}

{{#contentFor 'scripts'}}
  <script src='{{asset "built/post.js"}}' defer></script>
{{/contentFor}}