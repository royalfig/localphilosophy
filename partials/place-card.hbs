<article class="lp-place-card">
    {{#if feature_image}}<img src="{{img_url feature_image size='m'}}" alt="View of {{name}}">{{/if}}
    <a href="{{url}}" aria-label="Posts about {{name}}">
    <header>
        <p class="lp-badge">{{count.posts}} posts</p>
    </header>
    <footer>
        <h2>{{name}} &rarr;</h2>
    </footer>
    </a>
</article>