{{#contentFor 'scripts'}}

{{/contentFor}}

<div style="display:none">
  <img data-map-pin  src="{{asset 'images/map-pin.png' }}" >
  <img data-map-pin-shadow  src="{{asset 'images/map-pin-shadow.png' }}" >
</div>

<section class='lp-home-map-wrapper lp-border lp-border-bottom grid'>
    <div class='lp-home-map' id='map'></div>
</section>

<section class="grid lp-border-bottom lp-border">
  <div class="lp-home-card-container lp-border lp-border-bottom">
  {{#foreach posts}}
    <article class="lp-home-card" id="{{slug}}" style="background-image: url({{img_url feature_image size="m"}}) ">
      <section class="lp-home-card--front">
        <header class="lp-home-card__header">
          <p class="lp-home-card__location">
            {{primary_tag.name}}
          </p>
        </header>
        <div>
          <div class="lp-home-card__body">
            <h2>{{title}}</h2>
          </div>
          <footer>
            <div class="lp-home-card__authors">
              {{#foreach authors}}
                <div class="lp-author">
                  <img src="{{img_url profile_image size="s"}}" alt="{{name}}">
                  <p>{{name}}</p>
                </div>
              {{/foreach}}
            </div>
            <a href="{{url}}">
              <svg viewBox="0 0 24 24" ><path fill="none" d="M0 0h24v24H0z"/><path d="M12 11V8l4 4-4 4v-3H8v-2h4zm0-9c5.52 0 10 4.48 10 10s-4.48 10-10 10S2 17.52 2 12 6.48 2 12 2zm0 18c4.42 0 8-3.58 8-8s-3.58-8-8-8-8 3.58-8 8 3.58 8 8 8z" fill="currentColor" /></svg>
            </a>
          </footer>
        </div>
      </section>
      <section class="lp-home-card--back">
        <p>{{excerpt}}</p>
        <a class="lp-home-card__read" href="{{url}}" class="lp-button">Read</a>
      </section>
    </article>
  {{/foreach}}
  </div>
</section>

<section class="grid lp-border-bottom lp-border">
  <h2>Places</h2>
  <div class='lp-places lp-border lp-border-left'>
      {{#get 'tags' include='count.posts' order='count.posts desc' limit='5'}}
        {{#foreach tags}}
          <a class="lp-border" href='{{url}}'>
              <p>{{name}}</p><span>{{count.posts}}</span></a>
        {{/foreach}}
      <a class="lp-border" href='#'>Maine <span class="lp-coming-soon"><p>Coming Soon</p></span></a>
      <a class="lp-border" href='#'>Portland <span class="lp-coming-soon"><p>Coming Soon</p></span></a>
      <a class="lp-border" href='/places'><p>More Places &rarr;</p></a>
    </div>
  </div>
 
</section>
{{/get}}
</section>


<section class="grid">
  <div class="lp-cta__left">
    <h2>Where are you going?</h2>
    <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Et sequi illum expedita illo, fugiat ipsam magnam nihil magni soluta pariatur ad? Suscipit sint error voluptate, quas fuga illum ab sunt.s</p>
    <a class="lp-button" href="/#/portal">Subscribe</a>
  </div>
  <div class="lp-cta__right">

  </div>
</section>

{{#contentFor 'foot'}}

{{/contentFor}}


