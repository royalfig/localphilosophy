{{#contentFor 'scripts'}}
  <script>
  const postsForMap = [
  {{#foreach posts}}
    {title: "{{title}}",
    url: "{{url}}",
    slug: "{{slug}}",
    feature_image: "{{feature_image}}",
    location: "{{primary_tag.name}}",
    gc: "{{tags.[1].name}}",
    authors: [{name: "{{primary_author.name}}", profile_image: "{{primary_author.profile_image}}"},],
    author2: "{{authors.[1].name}}",
    author2Image: "{{authors.[1].profile_image}}",
    published_at: "{{published_at}}"},
  {{/foreach}}]
  </script>
{{/contentFor}}

<section class='lp-home-map-wrapper lp-border lp-border-bottom grid'>
  <div class='lp-home-map' id='map'></div>
  {{#is "tag"}}
    {{#tag}}
    <div class="lp-place-name">
      <h1>{{name}}</h1>
    </div>
    {{/tag}}
  {{/is}}
</section>

<section class="grid lp-border-bottom lp-border">
  <div class="lp-home-card-container">
  {{#foreach posts}}
    {{> "card" home="true"}}
  {{/foreach}}
  </div>
</section>

<section class="grid lp-border-bottom lp-border lp-places__card-container">
  <h2>Places</h2>
  <div class="lp-places-container">
    {{^is "tag"}}
      {{#get "tags" include="count.posts" order="count.posts desc"}}
          {{#foreach tags}}
              {{> "place-card"}}
          {{/foreach}}
      {{/get}}
    {{else}}
      {{#tag}}
        {{#get "tags" include="count.posts" order="count.posts desc" filter="slug:-{{slug}}"}}
            {{#foreach tags}}
                {{> "place-card"}}
            {{/foreach}}
        {{/get}}
      {{/tag}}
    {{/is}}
  </div>
</section>

{{#contentFor 'foot'}}

{{/contentFor}}


