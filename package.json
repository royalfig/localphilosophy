{
  "name": "localphilosophy",
  "version": "1.2.0",
  "description": "Local Philosophy",
  "engines": {
    "ghost": ">=4.0.0"
  },
  "main": "'src/index.js'",
  "scripts": {
    "reload": "node reload",
    "dev": "npm run reload & npm run watch",
    "watch": "NODE_ENV=development rollup -c -w",
    "build": "NODE_ENV=production rollup -c",
    "zip": "npm run build && node zip",
    "check": "gscan .",
    "css": "npx stylelint 'src/css/**/*.css' --fix"
  },
  "keywords": [
    "ghost-theme"
  ],
  "author": {
    "name": "Ryan Feigenbaum",
    "email": "ryan.feigenbaum@gmail.com",
    "url": "https://ryanfeigenbaum.com"
  },
  "license": "MIT",
  "config": {
    "card_assets": {
      "exclude": [
        "bookmark"
      ]
    },
    "posts_per_page": 15,
    "image_sizes": {
      "xxs": {
        "width": 50
      },
      "xs": {
        "width": 100
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 500
      },
      "l": {
        "width": 700
      },
      "xl": {
        "width": 1000
      },
      "xxl": {
        "width": 2000
      }
    }
  },
  "devDependencies": {
    "@babel/core": "7.18.6",
    "@babel/preset-env": "7.18.6",
    "@rollup/plugin-babel": "5.3.1",
    "@rollup/plugin-commonjs": "22.0.1",
    "@rollup/plugin-node-resolve": "13.3.0",
    "adm-zip": "0.5.9",
    "cssnano": "5.1.12",
    "eslint": "8.17.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.26.0",
    "gscan": "4.0.2",
    "livereload": "0.9.3",
    "postcss": "8.4.14",
    "postcss-import": "14.1.0",
    "postcss-preset-env": "7.8.3",
    "rollup": "2.77.0",
    "rollup-plugin-postcss": "4.0.2",
    "rollup-plugin-replace": "2.2.0",
    "rollup-plugin-terser": "7.0.2",
    "stylelint": "14.9.1",
    "stylelint-order": "5.0.0"
  },
  "dependencies": {
    "@tryghost/content-api": "^1.7.2",
    "leaflet": "~1.8.0"
  }
}
